node('nodejs') {
  stage('build') {
    openshiftBuild(buildConfig: 'nodejs', showBuildLogs: 'true')
  }
  stage('verify build') {
    sh 'node -v'
    openshiftVerifyBuild(buildConfig: 'nodejs')
  }
  stage('deploy') {
    openshiftDeploy(deploymentConfig: 'nodejs')
  }
  stage('verify deploy') {
    openshiftVerifyDeployment(deploymentConfig: 'nodejs')
  }
}
